source 'https://rubygems.org'

def rails_head?
  ENV['RAILS_VERSION'] == 'head'
end

rails_version = ENV['RAILS_VERSION']

if rails_version.nil?
  gem 'rails'
else
  if rails_head?
    gem 'rails', git: 'https://github.com/rails/rails.git'
  else
    gem 'rails', "~> #{rails_version}"
  end
end

gemspec path: '..'
